// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  firstName String
  lastName  String
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  user_id     Int
  url_project String
  url_image   String
  tags        Tag[]    
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  projects Project[] 
}
